# Prevent directory listing
Options -Indexes

# Only allow specific file types to be accessed directly
<FilesMatch "\.(pdf|doc|docx|jpg|jpeg|png)$">
    Require all granted
</FilesMatch>

# Deny access to all other files
<FilesMatch "^(?!.*\.(pdf|doc|docx|jpg|jpeg|png)$).*$">
    Require all denied
</FilesMatch>

# Prevent PHP execution in uploads directory
<FilesMatch "\.php$">
    Require all denied
</FilesMatch>
