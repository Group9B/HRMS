# Prevent directory listing
Options -Indexes

# Allow specific file types
<FilesMatch "\.(pdf|doc|docx|jpg|jpeg|png)$">
    Require all granted
</FilesMatch>

# Deny everything else by default
<Files "*">
    Require all denied
</Files>

# Prevent PHP execution in uploads directory
<FilesMatch "\.php$">
    Require all denied
</FilesMatch>
